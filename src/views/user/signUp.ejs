<!DOCTYPE html>
<html>
    <% include ../static/partials/head.ejs %>
<body>
    <% include ../static/partials/navbar.ejs %>
    <main class="container">
        <% include ../static/partials/messages.ejs %>
        <form class="mt-3 mx-auto col-lg-9 col-md-12 rounded bg-light" method="POST" action="/user">
            <h1 class="display-4 mb-4 text-center">Sign-Up</h1>
            <hr>
            <div class="form-group">
                <label for="username">User Name</label>
                <input type="text" id="username" class="form-control" placeholder="Enter User Name" name="username">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="phoneNumber">Cell Number</label>
                <input type="" name="phoneNumber" class="form-control" id="phoneNumber" placeholder="Cell Number">
                <small id="emailHelp" class="form-text text-muted">10 digits, no other characters (Example--> "3175551234").  For Group Notifications.</small>
            </div>
            <div class="row">
                <div class="form-group col-lg-6 col-md-12">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                    <small class="form-text text-muted">Password must be at least 6 characters long.</small>
                </div>
                <div class="form-group col-lg-6 col-md-12">
                    <label for="exampleInputPassword2">Password Confirmation</label>
                    <input type="password" name="passwordConfirmation" class="form-control" id="exampleInputPassword2" placeholder="Confirm Password">
                </div>
            </div>
            <button type="submit" class="btn btn-primary mb-3">Submit</button>
        </form>
    </main>
    <% include ../static/partials/baseScripts.ejs %>
</body>
</html>