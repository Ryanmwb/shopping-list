<!DOCTYPE html>
<html>
    <% include ../static/partials/head.ejs %>
<body>
    <% include ../static/partials/navbar.ejs %>
    <main class="container">
        <% include ../static/partials/messages.ejs %>
        <form class="mt-3 mx-auto col-lg-7 col-md-12 rounded bg-light" method="POST" action="/user/<%= currentUser.id %>/update">
            <h1 class="display-4 mb-4 text-center">Edit Profile</h1>
            <div class="form-group">
                <label for="username">User Name</label>
                <input type="text" id="username" class="form-control" value="<%= currentUser.username %>" name="username">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="<%= currentUser.email %>">
            </div>
            <div class="form-group">
                <label for="phoneNumber">Cell Number</label>
                <input type="" name="phoneNumber" class="form-control" id="phoneNumber" value=" <%= currentUser.phoneNumber %>">
                <small id="emailHelp" class="form-text text-muted">10 digits, no other characters (Example--> "3175551234").  For group text notifications.</small>
            </div>
            <div class="form-group">
                <label>Notifications</label>
                <div class="btn-group btn-group-toggle" data-toggle="buttons">
                    <label class="btn btn-secondary <% if(currentUser.notifications == true){ %> active <% } %>">
                        <% if(currentUser.notifications == true){ %> 
                            <input type="radio" name="notifications" value="true" id="on" autocomplete="off" checked>On 
                        <% } else { %>
                            <input type="radio" name="notifications" value="true" id="on" autocomplete="off">On
                        <% } %>
                    </label>
                    <label class="btn btn-secondary <% if(currentUser.notifications == false){ %> active <% } %>">
                        <% if(currentUser.notifications == false){ %>
                            <input type="radio" name="notifications" value="false" id="off" autocomplete="off" checked>Off
                        <% } else { %>
                            <input type="radio" name="notifications" value="false" id="off" autocomplete="off">Off
                        <% } %>
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>
</body>
</html>