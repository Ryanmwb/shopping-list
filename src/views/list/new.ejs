<!DOCTYPE html>
<html>
    <% include ../static/partials/head.ejs %>
<body>
    <% include ../static/partials/navbar.ejs %>
    <main class="container">
        <% include ../static/partials/messages.ejs %>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/groups">My Groups</a></li>
                <li class="breadcrumb-item"><a href="/groups/<%= groupId %>/show">Group - <%= groupName %></a></li>
                <li class="breadcrumb-item active" aria-current="page">New List</li>
            </ol>
        </nav>
        <header class="jumbotron">
            <h1 class="display-2">(list/new)</h1>
        </header>
        <!-- form goes here -->
        <form method="POST" id="listForm" action="/groups/<%= groupId %>/<%= groupName %>/lists/create">
            <div class="form-group">
                <label for="listName">List Name</label>
                <input type="text" class="form-control" id="listName" name="listName">
            </div>
            <div class="form-group">
                <label for="listDescription">List Description</label>
                <textarea name="listDescription" id="listDescription" class="form-control"></textarea>
            </div>
            <button type="submit" class="btn btn-success">Create</button>
        </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>
</body>
</html>