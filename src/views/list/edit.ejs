<!DOCTYPE html>
<html>
    <% include ../static/partials/head.ejs %>
<body>
    <% include ../static/partials/navbar.ejs %>
    <main class="container">
        <% include ../static/partials/messages.ejs %>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/groups">Groups</a></li>
                <li class="breadcrumb-item"><a href="/groups/<%= groupId %>/show">Group Id - <%= groupId %></a></li>
                <li class="breadcrumb-item active" aria-current="page">List - <%= list.name %> - edit</li>
            </ol>
        </nav>
        <header class="jumbotron">
            <h1 class="display-2"><%= list.name %> (list/edit)</h1>
        </header>
        <form method="POST" action="/groups/<%= groupId %>/lists/<%= list.id %>/update">
            <div class="form-group">
                <label for="listName">List Name</label>
                <input type="text" class="form-control" id="listName" name="listName" value="<%= list.name %>">
            </div>
            <button type="submit" class="btn btn-success">Save Changes</button>
        </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>
</body>
</html>