                    <label for="groupName">Group Name</label>
                    <input type="text" class="form-control" id="groupName" name="groupName">
                </div>
                <button type="submit" class="btn btn-success">Create</button>
            </form>
        </header>
        
    </main>

    <% include ../static/partials/baseScripts.ejs %>
