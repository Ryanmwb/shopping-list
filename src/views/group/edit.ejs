<!DOCTYPE html>
<html>
    <% include ../static/partials/head.ejs %>
<body>
    <% include ../static/partials/navbar.ejs %>
    <main class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/groups">My Groups</a></li>
                <li class="breadcrumb-item active" aria-current="page">Group - <%=group.name %> - Edit</li>
            </ol>
        </nav>
        <% include ../static/partials/messages.ejs %>
        <header class="jumbotron">
            <h1 class="display-2">(group/edit)</h1>
        </header>
        <form method="POST" action="/groups/<%= group.id %>/update">
            <div class="form-group">
                <label for="groupName">Group Name</label>
                <input type="text" class="form-control" id="groupName" name="groupName" value="<%= group.name %>">
            </div>
            <button type="submit" class="btn btn-success">Save Changes</button>
        </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>
</body>
</html>